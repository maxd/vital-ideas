.header-and-tags-line
  %h1&= @idea.title
  = render_tags @idea.tags, true

%p
  = t("activerecord.attributes.idea.state") + ":"
  %strong&= @idea.state.title

%p.idea-intention&= @idea.intention

- if @idea.description.present?
  .idea-description.rich-description= Sanitize.clean(@idea.description, Sanitize::Config::CURRENT)

-if @features.present?
  = render :partial => "shared/feature_list", :locals => { :show_menu => true }