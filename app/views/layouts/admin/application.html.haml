!!! XML
!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" } 
    %title= Admin::Application::TITLE
    %link(rel="shortcut icon" href="/favicon.ico")
    = javascript_include_tag :defaults, "jquery.autocomplete"
    = include_tiny_mce_if_needed(@additional_tiny_mce_options || {})
    = stylesheet_link_tag "reset", "clearfix", "application", "jquery.autocomplete"
    = yield :head
    - if yield :style
      %style{ :type => "text/css" }
        = yield :style
  %body
    .app-container
      .app-header
        %h1
          %a{ :href => "/" }= Admin::Application::TITLE
        = render :partial => 'layouts/user_navigation'
        = render :partial => "layouts/admin/main_navigation"
      .app-wrapper.clearfix
        .app-main{ :class => ("app-has-sidebar" if has_sidebar? ) }
          - if flash.present?
            .app-flash
              - flash.each do |type, message|
                %div{ :class => "flash-message #{type}" }
                  %p= message
            :javascript
              jQuery(function() {
                $(".app-flash").animate({opacity: 1.0}, 3000).hide("clip", {direction:"vertical"}, 1000);
              })
          = yield
        - if has_sidebar?
          .app-sidebar
            = render :partial => "sidebar"
      .app-footer
        %p
          = "2008 &ndash; #{Date.today.year} "
          = link_to "Hi-Tech Melancholia", "http://maksd.info"
