%p
  = I18n.t("email_greeting", :user_name => @user_name, :profile_path => url_for(:controller => "user_session", :action => "edit_profile", :only_path => false))

%h3(style="color:#333333;border-bottom:1px solid gray")= t("ideas_on_this_week")
- if @ideas_on_this_week.present?
  %ul
    - @ideas_on_this_week.each do |idea|
      %li(style="margin-bottom: 7px")
        %div
          = link_to h(idea.title), :controller => "ideas", :action => "show", :id => idea, :only_path => false
          = "(" + I18n.l(idea.created_at.localtime, :format => "%e %B %Y").lstrip + ")"
        %div(style="color:#808080")
          %em= idea.intention
- else
  %p
    %em= t("no_ideas_on_this_week")

%p
  = I18n.t("email_signature")


